<div class="col-md-12" id="postDiv">
    <div class="col-md-4" id="postCenterDiv">
        <form>

            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}"readonly>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <div class="form-control" id="content" style="border: 1px solid grey;width: 100%; height: 300px" >{{post.content}}
                </div>

                <div class="row" id="buttonRow">
                    <a href="#" role="button" class="btn btn-secondary" onclick="history.back()">Back</a>
                    <button type="button" class="btn btn-primary" id="btn-update" style="display: none;">Update</button>
                    <button type="button" class="btn btn-danger" id="btn-delete" style="display: none;">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>
