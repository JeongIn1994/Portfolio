{{>layout/aside}}
<main>
    <div id="postDiv">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" value="{{post.title}}"readonly>
        </div>
        <div class="form-group">
            <label for="summary">Summary</label>
            <img src="/display?fileName={{post.summary}}" alt="#">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <div class="form-control" id="content" style="border: 1px solid grey;width: 100%; height: 300px" >{{{post.content}}}</div>
        </div>

        <div class="row" id="buttonRow">
            <a href="#" role="button" class="btn btn-secondary" onclick="history.back()">Back</a>
            <button type="button" class="btn btn-primary" id="btn-update" style="display: none; margin-left: 1rem">Update</button>
            <button type="button" class="btn btn-danger" id="btn-delete" style="display: none; margin-left: 1rem">Delete</button>
        </div>
    </div>
</main>
<script>
    document.title = "[⚙️In's Inventory] " + "{{post.title}}"

    window.onload = () => {
        if(userRole === "ADMIN"){
            document.querySelector("#btn-update").style.display = "block";
            document.querySelector("#btn-delete").style.display = "block";
        }
    }
</script>
{{>layout/right}}