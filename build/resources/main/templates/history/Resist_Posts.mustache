{{>layout/header}}

<h1>Resist Post</h1>

<div class="col-md-12" id="postDiv">
    <div class="col-md-4" id="postCenterDiv">
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Input Your Post Title">
            </div>
            <div class="form-group">
                <label for="user_name">Author</label>
                <input type="text" class="form-control" id="user_name" value="{{usersName}}" placeholder="Input Your Name" readonly>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
<!--                <textarea class="form-control" id="content" placeholder="Input Content"></textarea>-->
                <textarea class="form-control" id="content"></textarea>
            </div>
        </form>
        <br>
        <a href="/" role="button" class="btn btn-secondary">Cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">Resist</button>

    </div>
</div>

{{>script/CKEditor}}
{{>layout/footer}}