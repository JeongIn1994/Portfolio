{{#userInfo}}
<div class="modal fade" id="settings">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Setting</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="col-md-12 category">
                    <a href="#" class="active" onclick="changeContent('User Profile')">User Profile</a>
                    <a href="#" onclick="changeContent('User Management')">User Management</a>
                    <a href="#" onclick="changeContent('FrontEnd')">FrontEnd</a>
                    <a href="#" onclick="changeContent('BackEnd')">BackEnd</a>
                </div>
            </div>
            <div class="modal-body" id="modal-body">
                <p class="menuTitle">UserProfile</p>
                <p class="menuContent" style="color: red"> * mark was readonly</p>
                {{#userInfo}}
                <!---- User Profile ---->
                <div class="UserProfileDiv">
                    <form class="UserProfile" action="/info/update" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" value="{{userInfo.name}}" >
                        </div>
                        <div class="form-group">
                            <label for="name">Email*</label>
                            <input type="text" class="form-control" id="email" value="{{userInfo.email}}" readonly>
                        </div>
                        <div class="form-group">
                            <label for="name">Sex</label>
                            <input type="text" class="form-control" id="sex" value="{{userInfo.sex}}" readonly style="margin-bottom: 0.2rem">
                            <select class="form-control" id="sexSelect">
                                <option value="male">male</option>
                                <option value="female">female</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Age</label>
                            <input type="text" class="form-control" id="age" value="{{userInfo.Age}}" >
                        </div>
                        <div class="form-group">
                            <label for="name">Phone_Number</label>
                            <input type="text" class="form-control" id="phone_number" value="{{userInfo.phone_number}}" >
                        </div>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Update</button>
                    </form>
                </div>
                {{/userInfo}}
                {{^userInfo}}
